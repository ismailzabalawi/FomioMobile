{
  "expo": {
    "name": "Fomio",
    "slug": "FomioMobile",
    "version": "0.1.0",
    "orientation": "default",
    "icon": "./assets/images/icon.png",
    "scheme": "fomio",
    "android": {
      "package": "com.fomio.mobile",
      "userInterfaceStyle": "automatic",
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "allowBackup": false,
      "softwareKeyboardLayoutMode": "pan",
      "intentFilters": [
        {
          "action": "VIEW",
          "autoVerify": false,
          "data": [
            {
              "scheme": "fomio",
              "host": "auth_redirect"
            }
          ],
          "category": [
            "BROWSABLE",
            "DEFAULT"
          ]
        },
        {
          "action": "VIEW",
          "autoVerify": true,
          "data": [
            {
              "scheme": "https",
              "host": "meta.fomio.app",
              "pathPattern": "/t/.*"
            },
            {
              "scheme": "https",
              "host": "meta.fomio.app",
              "pathPattern": "/u/.*"
            },
            {
              "scheme": "https",
              "host": "meta.fomio.app",
              "pathPattern": "/c/.*"
            },
            {
              "scheme": "https",
              "host": "meta.fomio.app",
              "path": "/search"
            }
          ],
          "category": [
            "BROWSABLE",
            "DEFAULT"
          ]
        }
      ],
      "permissions": [
        "android.permission.RECORD_AUDIO"
      ]
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.fomio.mobile",
      "userInterfaceStyle": "automatic",
      "associatedDomains": ["applinks:meta.fomio.app"],
      "infoPlist": {
        "CFBundleURLTypes": [
          {
            "CFBundleURLSchemes": [
              "fomio"
            ]
          },
          {
            "CFBundleURLSchemes": [
              "fomio"
            ]
          }
        ],
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "extra": {
      "DISCOURSE_BASE_URL": "https://meta.fomio.app",
      "APPLICATION_NAME": "Fomio",
      "APPLICATION_ID": "com.fomio.mobile",
      "router": {},
      "eas": {
        "projectId": "88338da6-ac18-4cd0-8a88-ef823e77028d"
      }
    },
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/images/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-notifications",
      "expo-image-picker",
      "./plugins/withFoldableSupport",
      "expo-secure-store",
      "expo-web-browser"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "owner": "ismailzabalawi"
  }
}
