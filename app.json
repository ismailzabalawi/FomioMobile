{
  "expo": {
    "name": "FomioMobile",
    "slug": "FomioMobile",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "fomio",
    "android": {
      "package": "com.fomio.mobile",
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "intentFilters": [
        {
          "action": "VIEW",
          "autoVerify": true,
          "data": [
            {
              "scheme": "fomio",
              "host": "auth",
              "pathPrefix": "/callback"
            },
            {
              "scheme": "fomio",
              "pathPattern": ".*auth.*callback.*"
            }
          ],
          "category": ["BROWSABLE", "DEFAULT"]
        }
      ]
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.fomio.mobile",
      "infoPlist": {
        "CFBundleURLTypes": [
          {
            "CFBundleURLSchemes": ["fomio"]
          }
        ]
      }
    },
    "extra": {
      "DISCOURSE_BASE_URL": "https://meta.techrebels.info",
      "APPLICATION_NAME": "Fomio Mobile",
      "APPLICATION_ID": "com.fomio.mobile"
    },
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/images/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-notifications",
      "expo-image-picker"
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
